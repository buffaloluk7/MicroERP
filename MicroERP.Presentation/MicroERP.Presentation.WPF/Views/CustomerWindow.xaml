<Controls:MetroWindow
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
 xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
 xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
 x:Class="MicroERP.Presentation.Views.CustomerWindow"
 x:Name="Window"
 Title="MicroERP"
 Width="640"
 Height="490"
 DataContext="{Binding CustomerWindow, Mode=OneWay, Source={StaticResource Locator}}"
 BorderThickness="1"
 BorderBrush="#FF41B1E1"
 WindowTransitionsEnabled="False">
    
    <Grid>
        <TabControl>
            <TabItem Header="Stammdaten">
                <StackPanel>
                    <GroupBox Header="Firma">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name" VerticalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="UID" Grid.Row="1" VerticalAlignment="Center" FontWeight="Bold" />
                            <TextBox Grid.Column="1" Margin="0,0,0,4" Text="{Binding Customer.Name, Mode=TwoWay}" />
                            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Customer.UID, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Person">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Vorname" VerticalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Nachname" Grid.Row="1" VerticalAlignment="Center" FontWeight="Bold" />
                            <TextBlock Text="Firma" VerticalAlignment="Center" Grid.Row="2" FontWeight="Bold" />
                            <TextBox Grid.Column="1" Margin="0,0,0,4" Text="{Binding Customer.FirstName, Mode=TwoWay}" />
                            <TextBox Grid.Column="1" Margin="0,0,0,4" Grid.Row="1" Text="{Binding Customer.LastName, Mode=TwoWay}" />
                            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Customer.Company}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Adresse">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Adresse" VerticalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Rechnungsadresse" VerticalAlignment="Center" Grid.Row="1" FontWeight="Bold" />
                            <TextBlock Text="Lieferadresse" VerticalAlignment="Center" Grid.Row="2" FontWeight="Bold" />
                            <TextBox Grid.Column="1" Margin="0,0,0,4" Text="{Binding Customer.Address, Mode=TwoWay}" />
                            <TextBox Grid.Column="1" Margin="0,0,0,4" Grid.Row="1" Text="{Binding Customer.BillingAddress}" />
                            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Customer.ShippingAddress, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,4,0,0">
                        <Button Command="{Binding CancelCommand}" Margin="0,0,6,0">
                            <TextBlock>
                                <Run FontFamily="Segoe UI Symbol" Text="&#xE10A;" />
                                <Run Text="ABBRECHEN"/>
                            </TextBlock>
                        </Button>
                        <Button Command="{Binding SaveCustomerCommand}" Margin="0,0,6,0">
                            <TextBlock>
                                <Run FontFamily="Segoe UI Symbol" Text="&#xE105;" />
                                <Run Text="SPEICHERN"/>
                            </TextBlock>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </TabItem>
            <TabItem Header="Rechnungen">
                <Grid>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>